fun main() {
    var str = "Hello";

    // Basic indexing (returns byte values)
    print(str[0]);  // 'H' = 72
    print(str[1]);  // 'e' = 101
    print(str[2]);  // 'l' = 108
    print(str[3]);  // 'l' = 108
    print(str[4]);  // 'o' = 111

    // Indexing with expressions
    print(str[1 + 1]);
    print(str[5 - 1]);

    // Indexing result of concatenation
    print(("ab" + "cd")[0]);
    print(("ab" + "cd")[3]);

    // Indexing result of repetition
    print(("xy" * 3)[0]);
    print(("xy" * 3)[5]);

    // Using len with indexing
    var text = "ABC";
    print(text[len(text) - 1]);

    var s = "\t\r\n\0";
    var i = 0;
    while (i < len(s)) {
        print(s[i]);
        i = i + 1;
    }

    return 0;
}