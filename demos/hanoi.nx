fun hanoi(n, src_peg, dst_peg, tmp_peg) {
    if (n == 0) return 0;
    var moves = hanoi(n - 1, src_peg, tmp_peg, dst_peg);
    // print("Move disc from peg " + src_peg + " to peg " + dst_peg);
    moves = moves + hanoi(n - 1, tmp_peg, dst_peg, src_peg);
    return moves + 1;
}

fun main(n) {
    print("Solution for Tower of Hanoi with " + str(n) + " discs:");
    var moves = hanoi(n, "A", "B", "C");
    print("Total " + str(moves) + " moves");
    return moves;
}